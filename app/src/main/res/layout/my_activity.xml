<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#118EE8">


        <ImageView
            android:layout_width="16dp"
            android:layout_gravity="center_vertical"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/title_bar_back_btn_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:layout_gravity="right"
            android:clickable="true"
            android:onClick="setting"
            android:layout_marginLeft="250dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设置"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#ffffff"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#118EE8"
                    android:orientation="horizontal">
                    
                    
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/push_chat_default"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:text="李阳"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_marginTop="10dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:background="@drawable/ph_bg"
                            android:text="186******67"/>



                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="180dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/right"/>
                    
                </LinearLayout>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:clickable="true"

                    android:onClick="toMyAsserts"
                    android:src="@drawable/mym111"/>

                <View
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layerType="software"
                    android:layout_gravity="center_horizontal"
                    android:background="#f5f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:onClick="toMyAsserts"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="19dp"
                        android:src="@drawable/myyue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="19dp"
                        android:textSize="16dp"
                        android:textColor="#C4000000"
                        android:text="余额"/>

                    <TextView
                        android:id="@+id/yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="180dp"
                        android:textSize="16dp"
                        android:textColor="#999999"
                        android:text="9,876,543.00元"/>

                </LinearLayout>


                <View
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layerType="software"
                    android:layout_gravity="center_horizontal"
                    android:background="#f5f5f5" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:clickable="true"

                    android:src="@drawable/mym222"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingBottom="50dp"
                    android:src="@drawable/mym333"/>





            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

               <ImageView
                   android:orientation="horizontal"
                   android:layout_width="fill_parent"
                   android:layout_height="50dp"
                   android:src="@drawable/foot666"
                   android:id="@+id/footerImg"
                   android:clickable="true"
                   android:onClick="toMainActivity"
                   android:layout_alignBottom="@id/scrollview"/>

    </RelativeLayout>




</LinearLayout>