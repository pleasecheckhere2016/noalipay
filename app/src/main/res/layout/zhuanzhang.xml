<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#ffffff">


        <ImageView
            android:layout_width="40dp"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/left_blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#262626"
            android:text="转账到支付宝账户"/>


        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="130dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#118EE8"
            android:text="转账记录"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/push_chat_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#262626"

            android:text="CQX(陈秋星)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="cqx696184@163.com"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转账金额"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:text="￥"
            android:textSize="40dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="40dp"/>



    </LinearLayout>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:hint="添加备注（50字以内）"
        android:background="@null"/>


    <Button
        android:layout_width="380dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="#118EE8"
        android:onClick="showMima"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:text="确认转账"/>

</LinearLayout>